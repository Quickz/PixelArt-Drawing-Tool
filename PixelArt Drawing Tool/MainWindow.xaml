<Window x:Class="PixelArt_Drawing_Tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PixelArt_Drawing_Tool"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel Background="LightGray">
        <Menu DockPanel.Dock="Top" Background="White">
            <MenuItem Header="_File">
                <MenuItem Name="MenuItemOpen"
                          Header="_Open"/>
                <MenuItem Name="MenuItemSave"
                          Header="_Save"
                          Click="MenuItemSave_Click"/>
                <MenuItem Name="MenuItemExit"
                          Header="_Exit"/>
            </MenuItem>
        </Menu>

        <DockPanel DockPanel.Dock="Bottom">

            <Grid DockPanel.Dock="Top" Grid.IsSharedSizeScope="True">
                
                <Canvas Name="PageBackground"
                        Width="auto"
                        Margin="50"
                        Background="white"/>

                <Image Name="PageContainer"
                       Height="auto"
                       Width="auto"
                       Margin="50"
                       MouseDown="PageContainer_MouseDown"
                       MouseMove="PageContainer_MouseMove"
                       Loaded="PageContainer_Loaded"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>

            </Grid>
            

            
            <!--
            <StackPanel DockPanel.Dock="Top"
                        Background="White"
                        Height="auto"
                        Width="auto"
                        Margin="50"
                        RenderOptions.BitmapScalingMode="NearestNeighbor"/>-->

        </DockPanel>
        

    </DockPanel>
</Window>
